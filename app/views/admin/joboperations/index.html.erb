<%= render 'shared/sidebar'%>

<div class="main-content">
  <%= render 'shared/navbar' %>
  <hr>
  <!-- breadcrumb-->
  <ol class="breadcrumb bc-3">
    <li>
      <%= link_to root_path do %>
        <i class="material-icons md-18">home</i>Accueil
      <% end %>
    </li>
    <li>
      <%= link_to "Joboperations", admin_joboperations_path %>
    </li>
  </ol>

  <div class="row">
    <h2 class="col-md-8 col-sm-8 col-xs-8 list-title clearfix">
      Joboperations <%= "(#{@joboperations.length})" unless @joboperations.empty? %>
    </h2>
  </div>

  <br>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered datatable" id="joboperations_list">
        <thead>
          <tr>
            <th>#</th>
            <th>Tâche</th>
            <th>Service</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @joboperations.each_with_index do |joboperation,id|
            edit_link = edit_admin_joboperation_path(joboperation)
            show_link = admin_joboperation_path(joboperation)

            jobparts = Hash.new
            joboperation.jobparts.each_with_index do |jobpart, index|
              jobparts[index] = {
                part_desc: jobpart.part.part_desc,
                part_qty: jobpart.part_qty
              }
            end
          %>
            <tr data-parts = "<%= jobparts.to_json %>">
              <td>
                <% if joboperation.jobparts_count > 0 %>
                  <i class="fa fa-plus-circle"></i>
                <% end %>
              </td>
              <td>
                <%= joboperation.operation_name %>
              </td>
              <td><%= joboperation.repairoption_name %></td>
              <td>
                <a href="<%= edit_link %>" class="btn btn-success btn-icon icon-left">
                  Modifier<i class="material-icons">edit</i>
                </a>&nbsp;&nbsp;&nbsp;
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>



  <!-- footer -->
  <footer class="main">
    © 2020 Kulucar Admin
  </footer>

</div>

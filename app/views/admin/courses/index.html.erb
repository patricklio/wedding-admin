<%= render 'shared/sidebar'%>
<div class="main-content" style="min-height: 1812px;">
  <%= render 'shared/navbar' %>
  <hr>
  <!-- Layout for breadcrumb-->
  <ol class="breadcrumb bc-3">
    <li>
      <%= link_to root_path do %>
        <i class="material-icons md-18">home</i>Accueil
      <% end %>
    </li>
    <li>
      <%= link_to "Liste des cours", admin_courses_path %>
    </li>
  </ol>

  <%= render 'shared/flashes'%>
  <br>

  <!-- Layout for page title with some actions-->
  <div class="row">
    <h2 class="col-md-8 col-sm-8 col-xs-8 list-title clearfix">
      Cours <%= "(#{@courses.length})" unless @courses.empty? %>
    </h2>

    <div class="col-md-4 col-sm-4 col-xs-4 clearfix">
      <%= link_to new_admin_course_path do %>
        <button type="button" class="btn btn-green btn-icon icon-left pull-right">
          Ajouter<i class="material-icons">add</i>
        </button>
      <% end %>
    </div>
  </div>

  <br>

  <div class='row'>
    <div class="col-md-12">
      <table class="table table-bordered datatable" id="courses_list_id">
        <thead>
          <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>auteur</th>
            <th>photo</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if @courses.length.zero? %>
          <% else %>
            <% @courses.each_with_index do |course, id| %>
              <tr>
                <td><%= id + 1 %></td>
                <td><%= course.title %></td>
                <td><%= course.author %></td>
                <td><%#= course.photo %></td>
                <td>
                    <%# <a href="<#%= edit_admin_course_path(course)" class="btn btn-info btn-icon icon-left">
                        Voir<i class="material-icons">remove_red_eye</i>
                    </a>&nbsp; %>
                    <a href="<%= edit_admin_course_path(course) %>" class="btn btn-success btn-icon icon-left">
                        Modifier<i class="material-icons">edit</i>
                    </a>&nbsp;
                    <a href="javascript:;" class="btn btn-red btn-icon icon-left button-delete"
                        modal-element-title="le cours"
                        modal-element="<%= course.title %>"
                        modal-url="<%= admin_course_path(course) %>"
                        modal-hint="Le cours et toutes ses lessons seront supprimés">
                        Supprimer<i class="material-icons">cancel</i>
                    </a>&nbsp;
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <footer class="main">
    © 2020 Kokolab Admin
  </footer>
</div>
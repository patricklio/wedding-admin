<%= simple_form_for [:admin, partner], method: methode, authenticity_token: true, wrapper: :custom_form_horizontal,
                    class: "form-horizontal form-groups-bordered" do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="card-group joined" id="accordion-test">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= link_to "#collapse-fr",:data => {:toggle => "collapse" , :parent =>"#accordion-test"}  do %>
                <% if methode == 'post' %>
                  Ajouter
                <% else %>
                  <%= partner.name %> <span>(ID <%= partner.id %> - Dernière mise à jour: <%= l(partner.updated_at, format: :long) %>)</span>
                <% end %>
              <% end %>
            </h4>
          </div>
          <div class="collapse show" id="collapse-fr">
            <div class="card-body">
              <%= f.input :name, label: "Nom", input_html: {style: "text-transform: uppercase;" }%>

              <%= f.input :address, label: "Addresse" %>
              <%= f.input :phone_number, label: "Téléphone" %>
              <%= f.input :email, label: "Email" %>
              <%= f.input :labor_hour_price, label: "Coût de main d'oeuvre horraire" %>
              <%= f.input :labor_currency, label: "Devise" %>

              <hr>
              <div class="form-group row">
                <div class="col-sm-offset-3 col-sm-6">
                  <%= f.button :submit, "Enregistrer", class: 'btn btn-success' %> &nbsp;&nbsp;
                  <%= f.button :submit, 'Enregistrer et continuer', class: 'btn btn-success set-lang', lang: 'fr' %> &nbsp;&nbsp;
                  <%= link_to "Retour", admin_partners_path, {:class=>"btn btn-default"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
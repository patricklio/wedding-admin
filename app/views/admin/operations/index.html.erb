<%= render 'shared/sidebar'%>

<div class="main-content" style="min-height: 1812px;">
  <%= render 'shared/navbar' %>
  <hr>
  <!-- breadcrumb-->
  <ol class="breadcrumb bc-3">
    <li>
      <%= link_to root_path do %>
        <i class="material-icons md-18">home</i>Accueil
      <% end %>
    </li>
    <li>
      <%= link_to "Opérations", admin_operations_path %>
    </li>
  </ol>

  <div class="row">
    <h2 class="col-md-8 col-sm-8 col-xs-8 list-title clearfix">
      Opérations <%= "(#{@operations.length})" unless @operations.empty? %>
    </h2>

    <div class="col-md-4 col-sm-4 col-xs-4 clearfix">
      <%= link_to new_admin_operation_path do %>
        <button type="button" class="btn btn-green btn-icon icon-left pull-right">
          Ajouter<i class="material-icons">add</i>
        </button>
      <% end %>
    </div>
  </div>

  <br>

  <%= render 'shared/flashes' %>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered datatable" id="operations_list">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @operations.each_with_index do |operation,id|
            edit_link = edit_admin_operation_path(operation)
            show_link = admin_operation_path(operation)
          %>
            <tr>
              <td>
                <%= id+1 %>
              </td>
              <td>
                <%= operation.name %>&nbsp;&nbsp;&nbsp;
              </td>
              <td><%= operation.description %></td>
              <td>
                <a href="<%= edit_link %>" class="btn btn-success btn-icon icon-left">
                  Modifier<i class="material-icons">edit</i>
                </a>&nbsp;&nbsp;&nbsp;

                <% unless operation.joboperations_count.positive? %>
                   <a href="javascript:;" class="btn btn-red btn-icon icon-left button-delete"
                    modal-element="<%= operation.name %>" modal-url="<%= show_link %>">
                      Supprimer<i class="material-icons">cancel</i>
                    </a>&nbsp;&nbsp;&nbsp;
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


  <!-- footer -->
  <footer class="main">
    © 2020 Kulucar Admin
  </footer>

</div>

<%= form_with(url: "/", method: "post", class: "form-horizontal form-groups-bordered") do %>
  <div class="row">
    <div class="col-md-12">
      <div class="card-group joined" id="accordion-test">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= link_to 'Ajouter', "#collapse-fr",:data => {:toggle => "collapse" , :parent =>"#accordion-test"} %>
            </h4>
          </div>
          <div class="collapse show" id="collapse-fr">
            <div class="card-body">
              <div class="form-group row">
                <%= label_tag(:name, "votre nom", class: 'control-label col-sm-3 pull-left') %>
                <div class="col-sm-6">
                  <%= text_field_tag(:name, "John DOE", class: 'form-control') %>
                </div>
              </div>
              <div class="form-group row">
                <%= label_tag(:make, "votre marque", class: 'control-label col-sm-3 pull-left') %>
                <div class="col-sm-6">
                  <%= select_tag "make", options_from_collection_for_select(@make, "id", "name", "1"), class: 'form-control'%>
                </div>
              </div>
              <div class="form-group row">
                <%= label_tag(:model, "votre modele", class: 'control-label col-sm-3 pull-left') %>
                <div class="col-sm-6">
                  <%= select_tag "model", options_from_collection_for_select(@model, "id", "name", "1"), class: 'form-control'%>
                </div>
              </div>
              <div class="form-group row">
                <%= label_tag(:mileage, "Kilometrage", class: 'control-label col-sm-3 pull-left') %>
                <div class="col-sm-6">
                  <%= text_field_tag(:mileage, "", class: 'form-control') %>
                </div>
              </div>
              <hr>
              <div class="form-group row">
                <%= label_tag(:fuel_type, "Type de carburant", class: 'control-label col-sm-3 pull-left') %>
                <div class="col-sm-6">
                  <%= select_tag "fuel_type", options_from_collection_for_select(@fuelType, "id", "name", "1"), class: 'form-control'%>
                </div>
              </div>
              <div class="form-group row">
              <%= label_tag(:vehicle_type, "Type de vehicule", class: 'control-label col-sm-3 pull-left') %>
              <div class="col-sm-6">
                <%= select_tag "vehicle_type", options_from_collection_for_select(@vehicleType, "id", "name", "1"), class: 'form-control'%>
              </div>
            </div>
              <hr>
              <div class="form-group row">
                <div class="col-sm-offset-3 col-sm-6">
                  <%= button_tag 'Enregistrer', type: 'submit', class: 'btn btn-success' %> &nbsp;&nbsp;
                  <%= button_tag 'Enregistrer et Continuer', type: 'submit', class: 'btn btn-success set-lang', lang: 'fr' %> &nbsp;&nbsp;
                  <%= button_tag 'Retour', type: 'reset', class: 'btn btn-default' %> &nbsp;&nbsp;
                 </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
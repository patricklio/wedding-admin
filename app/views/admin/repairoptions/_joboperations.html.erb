<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>ID</th>
        <th>Tâche</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @joboperations.each_with_index do |joboperation,id|
        edit_link = edit_admin_joboperation_path(joboperation)
        show_link = admin_joboperation_path(joboperation)
      %>
        <tr>
          <td>
            <%= id+1 %>
          </td>
          <td>
            <%= joboperation.operation_name %>
          </td>
          <td>
            <a href="<%= edit_link %>" class="btn btn-success btn-icon icon-left">
              Modifier<i class="material-icons">edit</i>
            </a>&nbsp;&nbsp;&nbsp;
            <a href="javascript:;" class="btn btn-red btn-icon icon-left button-delete"
              modal-element-title="la tâche"
              modal-element="<%= joboperation.operation_name %>"
              modal-url="<%= show_link %>"
              modal-hint="La tâche et ses pièces seront supprimés">
              Supprimer<i class="material-icons">cancel</i>
            </a>&nbsp;&nbsp;&nbsp;
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
